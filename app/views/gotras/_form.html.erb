<%= simple_form_for(@gotra) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :surname %>
    <%= f.input :gotra %>
    <%= f.input :kuldevi_matha %>
    <%= f.input :location %>
    <%= f.input :website ,placeholder: 'www.mathaname.com'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
